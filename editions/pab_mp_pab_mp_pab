%	\frac{\gamma\,\Mpl}{M_R^2}\,
%	\cdot (\, Y_L + 6\,\eta_L\,T\,)\\
%% third line
%	g_B Y_B' 
%	& ~\;=~\;
%	\frac{0.6}{g_*^{1/2}}\, 
%	\frac{\omega\,\Mpl}{T^2}\,
